{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install backend deps",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Install frontend deps",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    }
  ]
}